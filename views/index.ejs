<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">
    <title>microblog</title>

    <script type="text/javascript" src="/js/jquery-1.7.2.js"></script>
    <script type="text/javascript" src="/js/bootstrap.js"></script>
    <link type="text/css" href="/css/bootstrap.min.css" rel="stylesheet">
    <script type="application/javascript" src="/js/vue.js"></script>
    <script type="application/javascript" src="/js/vue-resource.js"></script>

    <style>
        .box{
            margin-top:  50px;
        }

        [v-cloak] {
            display:none !important;
        }
    </style>
    <script>
        window.onload = function () {

            new Vue({
                el: '#box',
                data: {
                    myData: []
                },
                computed:{
                    myData2:function () {
                        var aa =  this.myData;
                        for(var i = 0; i < aa.length; i++){
                            aa[i].avatar = '/avatar/' + aa[i].username + '.jpg';
                        }

                        return aa;
                    }
                },
                ready: function(){
                    // 等同于jquery的$.ajax

                    this.$http.get('/getAllshuoshuo?page=0').then(function(response){
                        this.myData = response.data;
                    })
                }
            });

        }
    </script>
</head>
<body>
<div class="container box">
<nav class="navbar navbar-default navbar-inverse navbar-fixed-top"  role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">班级说说</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">全部说说</a></li>
                <li><a href="#">我的说说</a></li>
                <li><a href="#">成员列表</a></li>

            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="regist">注册</a></li>
                <li><a href="login">登录</a></li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
    <% if(!login){ %>
    <h1>欢迎！</h1>
    <h4>班级说说是我们交流的园地欢迎注册</h4>
    <a href="/regist" class="btn btn-info " role="button">注册</a>
    <h4>已有账号登录</h4>
    <form role="form">
        <div class="form-group">
            <label for="exampleInputEmail1">用户名</label>
            <input width="500px" type="email" class="form-control" id="input1" placeholder="用户名可以是中文但不能和别人重复">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">密码</label>
            <input  type="password" class="form-control" id="input2" placeholder="密码至少六位">
        </div>
    </form>
    <button type="button" id="login" class="btn btn-default" >登录</button>
    <div class="alert alert-danger" role="alert" id='mistake' style="display:none"></div>
    <% }else{  %>
    <div class="container box">
        <div class="row">
            <div class="col-lg-1">
                <a href="/setavatar"><img class="avatar" src="/avatar/<%= avatar %>" alt=""/></a>
            </div>
            <div class="col-lg-6 col-lg-offset-1">
                <p><%= username %></p>
                <textarea name="content" id="content" cols="80" rows="4"></textarea>
                <button type="button" id="fabiao" class="btn btn-success">发表说说</button>
            </div>
        </div>
    </div>

    <% } %>
    <div class="container" id="box" v-cloak>
        <div class="row" >
            <div class="col-xs-6 col-md-3" v-for="item in myData2">
                   <h2><img width="50px" :src="item.avatar" >{{ item.username }}说</h2>
                <div>
                    {{ item.content }}
                </div>
                <h4 style="text-align: center"></h4>
            </div>

        </div>
    </div>
</div>
<script>


    $('input').focus(function(event) {
        /* Act on the event */
        $('#mistake').fadeOut();
    });

    $('#login').click(function(event) {
        /* Act on the event */
        $.post('/dologin', {
            username : $('#input1').val(),
            password : $('#input2').val()
        }, function(result) {
            if(result == '-3'){
                //服务器错误
                console.log('服务器错误');
            }else if( result == 1){
                alert('登录成功，将要跳转到首页')
                window.location.href = "/" ;
            }else if(result == '-1'){
                $('#mistake').html('密码错误');
                $('#mistake').fadeIn();
            }else if(result = '-2'){
                $('#mistake').html('用户名不存在');
                $('#mistake').fadeIn();
            }
        });

    });

    $('#fabiao').click(function () {
        $.post('/release',{
            content : $('#content').val()
        },function (result) {
            if(result == '-3'){
                alert('服务器错误');
            }else{
                alert('发表成功');
            }
        })
        window.location.href = '/'
    })
</script>

</body>
</html>